<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="rootPane" prefHeight="768.0" prefWidth="1080.0" style="-fx-background-color: black;" stylesheets="@../../../../css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.vava.royalmate.controller.LoginController">
    <children>
        <!-- Background Image (Slightly more opaque than splash?) -->
        <ImageView fx:id="backgroundImageView" fitHeight="768.0" fitWidth="1080.0" opacity="0.4" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@../../../../images/background.png" backgroundLoading="true" />
            </image>
        </ImageView>

        <!-- Centered Content Area -->
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="450.0" spacing="20.0">
            <children>
                <!-- Title -->
                <Text fill="#F1DA2C" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="auth-title" text="SIGN IN">
                    <font>
                        <Font name="System Bold" size="64.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Text>

                <!-- Form Container -->
                <VBox fx:id="formContainer" alignment="TOP_CENTER" spacing="15.0" styleClass="auth-form-container" VBox.vgrow="NEVER">
                    <padding>
                        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
                    </padding>
                    <children>
                        <!-- Username -->
                        <Label styleClass="form-label" text="Username" textFill="WHITE" />
                        <TextField fx:id="usernameField" promptText="Enter your username" styleClass="text-input" />

                        <!-- Password -->
                        <Label styleClass="form-label" text="Password" textFill="WHITE">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin></Label>
                        <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-input" />

                        <!-- Error Message Area -->
                        <Label fx:id="errorLabel" managed="false" styleClass="error-label" text="Error message here" textFill="RED" visible="false">
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>

                        <!-- Sign In Button -->
                        <Button fx:id="signInButton" mnemonicParsing="false" onAction="#handleSignIn" styleClass="splash-button, button-primary" text="SIGN IN">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Button>

                        <!-- Register Link -->
                        <Hyperlink fx:id="registerLink" onAction="#handleRegisterLink" styleClass="auth-link" text="Don't have an account yet?" textFill="#FDEED2">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Hyperlink>
                    </children>
                </VBox>
            </children>
            <StackPane.margin>
                <Insets />
            </StackPane.margin>
        </VBox>
    </children>
</StackPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="768.0" prefWidth="1080.0" style="-fx-background-color: black;" stylesheets="@../../../../css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.vava.royalmate.controller.MainMenuController">
    <top>
        <!-- Include Navbar -->
        <fx:include source="navbar-view.fxml" />
    </top>
    <center>
        <!-- Scrollable Content Area -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" BorderPane.alignment="CENTER">
            <content>
                <VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-background-color: transparent;">
                    <padding>
                        <Insets bottom="50.0" /> <!-- Bottom padding for scroll space -->
                    </padding>
                    <children>
                        <!-- 1. Banner Area -->
                        <StackPane fx:id="bannerPane" styleClass="homepage-banner-pane">
                            <ImageView fx:id="bannerImageView" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true" />
                            <Label fx:id="bannerErrorLabel" styleClass="message-label" textFill="WHITE" managed="false" visible="false"/>
                        </StackPane>

                        <!-- 2. Filter Buttons -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button fx:id="slotsButton" mnemonicParsing="false" onAction="#handleFilterSlots" styleClass="button-secondary-small" text="%homepage.button.slots" />
                                <Button fx:id="rouletteButton" mnemonicParsing="false" onAction="#handleFilterRoulette" styleClass="button-secondary-small" text="%homepage.button.roulette" />
                                <Button fx:id="coinflipButton" mnemonicParsing="false" onAction="#handleFilterCoinflip" styleClass="button-secondary-small" text="%homepage.button.coinflip" />
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>

                        <!-- 3. Top Games Section -->
                        <VBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Label styleClass="top-games-title" text="%homepage.title.topgames" textFill="#F1DA2C" />
                                <!-- 3x3 Grid for Top Games -->
                                <GridPane fx:id="topGamesGridPane" hgap="20.0" vgap="20.0" alignment="CENTER">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                    </columnConstraints>
                                    <!-- Rows added dynamically, or define 3 RowConstraints -->
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="120.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="120.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="120.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <!-- Game covers added dynamically by controller -->
                                </GridPane>
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </VBox>

                        <!-- 4. Play More Button -->
                        <Button fx:id="playMoreGamesButton" mnemonicParsing="false" onAction="#handlePlayMore" styleClass="splash-button, button-primary" text="%homepage.button.playmore">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Button>

                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>